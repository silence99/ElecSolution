<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Framework.UserWidthTextBox"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">
	<Border BorderBrush="#FFCAC3BA" BorderThickness="1" Height="50" VerticalAlignment="Top" CornerRadius="2" x:Name="b1" HorizontalAlignment="Left" Width="401" Background="White">
		<Canvas Margin="-1" OpacityMask="Black" Width="400">
			<Border BorderBrush="Black" BorderThickness="0" Height="48" Width="100" Background="#FFEEE7DE" CornerRadius="2" Canvas.Left="1" Canvas.Top="1">
                <Label  Content="字段名称" FontSize="14" Foreground="#FF776B5F" FontFamily="SimSun" Name="lbl" Width="86" Canvas.Left="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
			</Border>
            <TextBox Height="24" Canvas.Left="110" Text="{Binding ElementName=UserControl,Path=Text}" Canvas.Top="15" Width="144" BorderThickness="0" FontSize="14" FontFamily="SimSun"  MaxLines="1" Foreground="#FF776B5F" Name="txtbox" GotFocus="txtbox_GotFocus" LostFocus="txtbox_LostFocus" SelectionBrush="#FF4242E0" BorderBrush="#FF0E70F3" IsReadOnly="{Binding ElementName=UserControl,Path=ReadOnly}" />
		</Canvas>
	</Border>
</UserControl>