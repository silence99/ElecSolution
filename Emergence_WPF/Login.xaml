        xmlns:control="clr-namespace:Emergence_WPF"
        ResizeMode="NoResize"
        Background="White" 
        Height="454px"
        Width="490px"
        WindowStartupLocation="CenterScreen"
        Title="应急指挥管理平台" 
        WindowStyle="None">
