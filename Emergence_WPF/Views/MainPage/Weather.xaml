<UserControl x:Class="Emergence_WPF.Views.MainPage.Weather"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Name="TodayIcon" Source="D:\Work\Code\electricity\Emergence_WPF\Image\MainPage\WeatherIcons\0.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" >
            <Label Content="3℃" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="晴" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="西风    二级" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="湿度    21%" Foreground="White" FontFamily="Microsoft Sans Serif"/>
        </StackPanel>
        <StackPanel Name="Af1Panel" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" >
            <StackPanel>
                <Image Name="Af1Icon" Source="D:\Work\Code\electricity\Emergence_WPF\Image\MainPage\WeatherIcons\1.png" Width="70"/>
                <Label Content="明天" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
                <Label Content="阴转晴" Name="Af1" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
                <Label Content="-4~7℃" Name="Af1Degree" HorizontalAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Image Name="Af2Icon" Source="D:\Work\Code\electricity\Emergence_WPF\Image\MainPage\WeatherIcons\2.png" Width="70"/>
            <Label Content="后天" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="阴" Name="Af2"  HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="-4~7℃" Name="Af2Degree" HorizontalAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Image Name="Af3Icon" Source="D:\Work\Code\electricity\Emergence_WPF\Image\MainPage\WeatherIcons\2.png" Width="70"/>
            <Label Content="后天" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="阴" Name="Af3"  HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            <Label Content="-4~7℃" Name="Af3Degree" HorizontalAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
        </StackPanel>
        <StackPanel Name="Af4Panel" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" >
            <StackPanel>
                <Image Name="Af4Icon" Source="D:\Work\Code\electricity\Emergence_WPF\Image\MainPage\WeatherIcons\1.png" Width="70"/>
                <Label Content="明天" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
                <Label Content="阴转晴" Name="Af4" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
                <Label Content="-4~7℃" Name="Af4Degree" HorizontalAlignment="Center" Foreground="White" FontFamily="Microsoft Sans Serif"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
