<UserControl x:Class="Emergence_WPF.Views.Event.MasterEventDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emergence_WPF.Comm"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="DataGrid">
                <!--网格线颜色-->
                <Setter Property="CanUserResizeColumns" Value="false"/>
                <Setter Property="Background" Value="#000000" />
                <Setter Property="BorderBrush" Value="#FFFFFF" />
                <Setter Property="HorizontalGridLinesBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="#000000"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalGridLinesBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="#000000"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="MinWidth" Value="0" />
                <Setter Property="MinHeight" Value="60" />
                <Setter Property="Foreground" Value="#FFFFFF" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridColumnHeader">
                            <Border x:Name="BackgroundBorder" BorderThickness="0,1,0,1"
                             BorderBrush="#000000"
                              Width="Auto">
                                <Grid  Background="#006F69">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Path x:Name="SortArrow" Visibility="Collapsed" Data="M0,0 L1,0 0.5,1 z" Stretch="Fill"  Grid.Column="2" Width="8" Height="6" Fill="White" Margin="0,0,5,0"
                            VerticalAlignment="Center" RenderTransformOrigin="1,1" />
                                    <Rectangle Width="1" Fill="#FFFFFF" HorizontalAlignment="Right" Grid.ColumnSpan="1" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Height" Value="60"/>
            </Style>
            <!--行样式触发-->
            <!--背景色改变必须先设置cellStyle 因为cellStyle会覆盖rowStyle样式-->
            <Style  TargetType="DataGridRow">
                <Setter Property="Background" Value="#000000" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Height" Value="57"/>
                <Setter Property="Foreground" Value="#FFFFFF" />
                <Style.Triggers>
                    <!--隔行换色-->
                    <Trigger Property="AlternationIndex" Value="0" >
                        <Setter Property="Background" Value="#242424" />
                    </Trigger>
                    <Trigger Property="AlternationIndex" Value="1" >
                        <Setter Property="Background" Value="#181818" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#090909"/>
                        <!--<Setter Property="Foreground" Value="White"/>-->
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!--单元格样式触发-->
            <Style TargetType="DataGridCell">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center"  >
                           <ContentPresenter />
                            </TextBlock>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <DockPanel Margin="20">
            <DockPanel Height="60" HorizontalAlignment="Stretch" Name="head" DockPanel.Dock="Top" Background="#CCE2E1">
                <TextBlock FontSize="20" DockPanel.Dock="Left" TextAlignment="Center" HorizontalAlignment="Left" Margin="51,15,0,0" Foreground="Black">主事件详情</TextBlock>
                <!--<Button FontSize="16" Width="132" Height="36" Background="#006f69" DockPanel.Dock="Left" HorizontalAlignment="right" Margin="0,0,51,0" Foreground="White" Content="搜索"></Button>-->
            </DockPanel>
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="140"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="0" Grid.Row="0" >
                    <TextBlock Text="序号" HorizontalAlignment="Left" Padding="0,5,5,5" Margin="20,22,10,0"/>
                    <TextBox Name="SerialNumberTextBox" Text="{Binding Path=_txtSerialNumber}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="1" Grid.Row="0" >
                    <TextBlock Text="标题" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="TitleTextBox" Text="{Binding Path=_txtTitle}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="2" Grid.Row="0" >
                    <TextBlock Text="类型" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="TypeTextBox" Text="{Binding Path=_txtTime}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="3" Grid.Row="0" >
                    <TextBlock Text="等级" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="LevelTextBox" Text="{Binding Path=_txtSubmitParty}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="4" Grid.Row="0" >
                    <TextBlock Text="时间点" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="TimeTextBox" Text="{Binding Path=_txtTime}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="5" Grid.Row="0" >
                    <TextBlock Text="报送人" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="SubmitPartyTextBox" Text="{Binding Path=_txtSubmitParty}" Height="34" Width="Auto" MinWidth="100" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
                    <TextBlock Text="地点" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="LocateTextBox" Text="{Binding Path=_txtLocate}" Height="34" Width="Auto" MinWidth="300" Margin="0,5,0,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="6">
                    <TextBlock Text="简介" HorizontalAlignment="Left" Padding="0,5,5,5"  Margin="20,22,10,0"/>
                    <TextBox Name="RemarkTextBox" Text="{Binding Path=_txtLocate}" Height="34" Width="Auto" MinWidth="600" MinHeight="90" Margin="0,5,0,5" />
                </StackPanel>
            </Grid>


        </DockPanel>
        <DockPanel Margin="20,0,20,20">
            <DockPanel Height="60" HorizontalAlignment="Stretch" DockPanel.Dock="Top" Background="#CCE2E1">
                <TextBlock FontSize="20" DockPanel.Dock="Left" TextAlignment="Center" HorizontalAlignment="Left" Margin="51,15,0,0" Foreground="Black">子事件列表</TextBlock>

                <Button FontSize="16" Width="132" Height="36" Background="#006f69" DockPanel.Dock="Left" HorizontalAlignment="right" Margin="0,0,51,0" Foreground="White" Content="删除子事件"></Button>
            </DockPanel>
            <StackPanel Orientation="Vertical">
                <DataGrid Name="DataCodeing" CanUserAddRows="False"  ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden"  
                                    RowHeaderWidth="0" HeadersVisibility="Column" HorizontalAlignment="Stretch" Background="Transparent" 
                                    IsReadOnly="True" AlternationCount="2" AutoGenerateColumns="False" ItemsSource="{Binding masterEventList}">

                    <DataGrid.Columns >
                        <DataGridCheckBoxColumn Binding="{Binding IsCheck}" x:Name="f1" Header=""  Width="0.5*" />
                        <DataGridTextColumn  Binding="{Binding Path=SerialNumber}" x:Name="f2" Header="标题" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=Title}" x:Name="f3" Header="时间"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=EventType}" x:Name="f4" Header="地区"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=Grade}" x:Name="f5" Header="报送人"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=Time}" x:Name="f6" Header="报送单位"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=SubmitParty}" x:Name="f7" Header="时间类型"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=Locate}" x:Name="f8" Header="事件等级"  Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn  Binding="{Binding Path=Locate}" x:Name="f9" Header="事件状态"  Width="*" ></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel  VerticalAlignment="Bottom" Margin="0,5,0,0">
                    <local:Pager Height="30" Width="auto" VerticalAlignment="Bottom"
                     TotalCount="{Binding TotalCount,Mode=TwoWay}"
                     PageSize="{Binding PageSize,Mode=TwoWay}"
                     PageIndex="{Binding PageIndex,Mode=TwoWay}"
                     TotalPage="{Binding TotalPage,Mode=TwoWay}"
                     PageChanged="Pager_OnPageChanged">
                    </local:Pager>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</UserControl>
