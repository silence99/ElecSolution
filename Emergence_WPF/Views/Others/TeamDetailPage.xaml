        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="80px"/>
            <RowDefinition Height="240px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#62A6A3" Grid.Column="0" Grid.Row="0"  BorderThickness="0 1 0 0">

            <DockPanel Grid.Column="0" Grid.Row="0" Background="#006f69" Height="80" 
                   Width="auto"  HorizontalAlignment="Stretch" 
                   IsEnabled="{Binding Path=IsPageEnabled}">
                <Label Name="GoBackTitle" MouseLeftButtonUp="GoBack">&lt;返回</Label>
                <Label Name="TeamDetailTitle" Margin="20,0,0,0" Style="{StaticResource SelectedLabel}" HorizontalAlignment="Left">队伍详情</Label>
                <!--<TextBox Style="{StaticResource TextBoxSearchStyle}" Margin="20,0,0,0" HorizontalAlignment="Left" Text="队员姓名" Width="278" Height="41" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>-->
            </DockPanel>
        </Border>
        <DockPanel Grid.Column="0" Grid.Row="1" Background="White" 
                   IsEnabled="{Binding Path=IsPageEnabled}">
            <Grid ShowGridLines="False" Name="gridTest" DockPanel.Dock="Top" Background="White" IsEnabled="{Binding Path=IsTeamEditModel, Mode=TwoWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition Width="3.5*"></ColumnDefinition>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition Width="3.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource SubEventDetailNameLabel}" Grid.Column="0" Grid.Row="0" Content="队伍名称"/>
                <Label Style="{StaticResource SubEventDetailValueLabel}"  Grid.Column="1" Grid.Row="0" Content="{Binding Path=TeamName, Mode=TwoWay}" />
                <Label Style="{StaticResource SubEventDetailNameLabel}" Grid.Column="2" Grid.Row="0" Content="所属单位"/>
                <Label Style="{StaticResource SubEventDetailValueLabel}"  Grid.Column="3" Grid.Row="0" Content="{Binding Path=TeamDept, Mode=TwoWay}" />
                <Label Style="{StaticResource SubEventDetailNameLabel}" Grid.Column="0" Grid.Row="1" Content="队长姓名"/>
                <Label Style="{StaticResource SubEventDetailValueLabel}"  Grid.Column="1" Grid.Row="1" Content="{Binding Path=PersonCharge, Mode=TwoWay}" />
                <Label Style="{StaticResource SubEventDetailNameLabel}" Grid.Column="2" Grid.Row="1" Content="队长电话"/>
                <Label Style="{StaticResource SubEventDetailValueLabel}"  Grid.Column="3" Grid.Row="1" Content="{Binding Path=PersonChargePhone, Mode=TwoWay}" />
                <Label Style="{StaticResource SubEventDetailNameLabel}" Grid.Column="0" Grid.Row="2" Content="所属地址"/>
                <Label Style="{StaticResource SubEventDetailValueLabel}"  Grid.Column="1" Grid.Row="2" Grid.RowSpan="3" Content="{Binding Path=TeamLocale, Mode=TwoWay}" />
