<UserControl x:Class="Emergence_WPF.Views.AddressPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emergence_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <Button Content="确定" Click="ButtonOK_Click"/>
            <Button Content="取消" Click="ButtonCancel_Click"/>
        </DockPanel>
        <DockPanel VerticalAlignment="Center">
            <WebBrowser Name="WebBrowser" Source="AddressPicker.html"/>
        </DockPanel>
    </Grid>
</UserControl>
