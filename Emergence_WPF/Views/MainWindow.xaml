<Window x:Class="Emergence_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d" 
        d:DesignHeight="1080" d:DesignWidth="1920"
        WindowStartupLocation="CenterScreen" MinHeight="630" MinWidth="1000"
        Icon="/Image/Common/bbbb.ico"
        Title="应急指挥中心管理平台" Loaded="Window_Loaded"
        ResizeMode="{Binding Path=ResizeMode, Mode=TwoWay}"
        WindowState="{Binding Path=WindowState, Mode=TwoWay}"
        WindowStyle="{Binding Path=WindowStyle, Mode=TwoWay}"
        Left="{Binding Path=Left, Mode=TwoWay}"
        Top="{Binding Path=Top, Mode=TwoWay}">

    <!--<Canvas>-->
    <Grid>
        <DockPanel  Name="dock">
            <DockPanel Height="80" HorizontalAlignment="Stretch" Name="head" DockPanel.Dock="Top" Background="#006F69">
                <Image Canvas.Left="20" Margin="10,0,0,3" DockPanel.Dock="Left" Source="/Image/Common/Icon_MainBrand.png" HorizontalAlignment="Left" ></Image>
                <TextBlock FontSize="30" DockPanel.Dock="Left" TextAlignment="Center" Foreground="White" HorizontalAlignment="Left" Margin="10,20,0,0">应急指挥中心管理应用平台</TextBlock>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Name="headright" HorizontalAlignment="Right">
                    <Image Margin="0,0,20,0" Width="30" Height="30" Tag="" MouseLeftButtonDown="HomeBtn_Click" Source="/Image/Common/Icon_Home.png" HorizontalAlignment="Right" Cursor="Hand" ></Image>
                    <Image Margin="0,0,20,0" Width="30" Height="30" MouseLeftButtonDown="MasterEventBtn_Click" Source="/Image/Common/Icon_Lighting.png" HorizontalAlignment="Right" Cursor="Hand"></Image>
                    <Image Margin="0,0,20,0" Width="30" Height="30" Source="/Image/Common/Icon_Message.png"  MouseLeftButtonDown="Image_MouseRightButtonDown" HorizontalAlignment="Right" Cursor="Hand"></Image>
                    <Image Margin="0,0,20,0" Width="30" Height="30" Tag="MasterEventDetail" Source="/Image/Common/Icon_Team.png"  MouseLeftButtonDown="GraphBtn_Click" HorizontalAlignment="Right" Cursor="Hand"></Image>
                    <Image Margin="0,0,20,0" Width="30" Height="30" Source="/Image/Common/Icon_FullScreen.png" HorizontalAlignment="Right" MouseLeftButtonDown="Image_MouseLeftButtonDown_PopupMasterEventPage" Cursor="Hand"></Image>
                    <Image Margin="0,0,20,0" Width="30" Height="30" Source="/Image/Common/Icon_Setting.png" HorizontalAlignment="Right" Cursor="Hand">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding NavigateCommand}" CommandParameter=".\Views\Others\ManagementPage.xaml" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                    <TextBlock Margin="0,20,20,0" Foreground="White" FontSize="30" FontFamily="Microsoft Sans Serif">|</TextBlock>
                    <Image Margin="0,0,18,0" Width="30" Height="30" Source="/Image/Common/Icon_User.png"  HorizontalAlignment="Right" Cursor="Hand"></Image>
                    <TextBlock Margin="0,30,20,30" Foreground="White" FontSize="20" FontFamily="Microsoft Sans Serif" Name="loginname" Text="{Binding Path=UserNameLabel}"/>
                    <TextBlock Margin="0,20,20,0" Foreground="White" FontSize="30" FontFamily="Microsoft Sans Serif">|</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="0,0,20,0" Width="30" Height="30" Source="/Image/Common/Icon_Minimize.png" HorizontalAlignment="Right" Cursor="Hand" MouseLeftButtonDown="MinimizeBtn_Click"></Image>
                        <Image Margin="0,0,30,0" Width="30" Height="30" Source="/Image/Common/Icon_LogOut.png" HorizontalAlignment="Right" Cursor="Hand" MouseLeftButtonDown="LogoutBtn_Click"></Image>
                        <!--<TextBlock Foreground="White" FontSize="14" Padding="10,17,0,0">登出</TextBlock>-->
                    </StackPanel>
                </StackPanel>
            </DockPanel>
            <Frame Name="frmMain" DockPanel.Dock="Top" NavigationUIVisibility="Hidden"></Frame>
        </DockPanel>

        <!--<Popup 
            x:Name="PopupSelectMaterial" 
            Width="{Binding Path=MainWindowPopup.PopupWidth}" 
            Height="{Binding Path=MainWindowPopup.PopupHeight}"
            StaysOpen="True"   
            IsOpen="{Binding Path=MainWindowPopup.IsOpen}"   
            AllowsTransparency="True"  
            PopupAnimation="Slide"  
            PlacementTarget="{Binding ElementName=Grid_MasterEventDetail}"  
            Placement="Center">
            <Frame x:Name="Frame_MainWindowPopup"></Frame>
        </Popup>-->
    </Grid>
</Window>
